{
  "name": "@nerd-coder/sharp-loader",
  "version": "0.2.1",
  "description": "Sharp Loader for webpack",
  "main": "dist/index.js",
  "scripts": {
    "test": "jest",
    "release": "release-it",
    "release:ci": "release-it minor --ci",
    "build": "babel src -d dist --copy-files"
  },
  "author": "toanzzz",
  "license": "ISC",
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "webpack",
    "sharp"
  ],
  "peerDependencies": {
    "file-loader": "^6.0.0",
    "webpack": "^4.0.0 || ^5.0.0"
  },
  "dependencies": {
    "file-loader": "^6.0.0",
    "loader-utils": "^2.0.0",
    "schema-utils": "^2.7.0",
    "sharp": "^0.25.4"
  },
  "devDependencies": {
    "@babel/cli": "^7.10.5",
    "@babel/core": "^7.11.1",
    "@babel/preset-env": "^7.11.0",
    "@types/jest": "^26.0.9",
    "babel-jest": "^26.2.2",
    "cross-env": "^7.0.2",
    "jest": "^26.2.2",
    "memfs": "^3.2.0",
    "release-it": "*",
    "webpack": "^4.44.1",
    "webpack-cli": "^3.3.12"
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "current"
          }
        }
      ]
    ]
  },
  "prettier": {
    "semi": false,
    "arrowParens": "avoid",
    "printWidth": 100,
    "singleQuote": true,
    "tabWidth": 2
  },
  "release-it": {
    "hooks": {
      "after:bump": "npm run build"
    }
  }
}
