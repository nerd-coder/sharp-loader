{
  "name": "@nerd-coder/sharp-loader",
  "version": "0.6.3",
  "description": "Sharp Loader for webpack",
  "main": "dist/index.js",
  "repository": "github:nerd-coder/sharp-loader",
  "homepage": "https://github.com/nerd-coder/sharp-loader",
  "scripts": {
    "test": "jest",
    "release": "release-it",
    "release:patch": "release-it patch --ci",
    "release:minor": "release-it minor --ci",
    "build": "cross-env NODE_ENV=production babel src -d dist --copy-files"
  },
  "author": "toanzzz",
  "license": "ISC",
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "webpack",
    "sharp"
  ],
  "peerDependencies": {
    "file-loader": "^6.0.0",
    "sharp": "^0.28.3",
    "webpack": "^4.0.0 || ^5.0.0"
  },
  "dependencies": {
    "file-loader": "^6.0.0",
    "loader-utils": "^2.0.0",
    "schema-utils": "^3.1.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.10.5",
    "@babel/core": "^7.11.4",
    "@babel/preset-env": "^7.11.0",
    "@types/jest": "^26.0.10",
    "babel-jest": "^27.0.6",
    "cross-env": "^7.0.2",
    "jest": "^27.0.6",
    "memfs": "^3.2.0",
    "release-it": "^14.10.1",
    "unionfs": "^4.4.0",
    "webpack": "^5.47.0",
    "webpack-cli": "^4.7.2"
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "current"
          }
        }
      ]
    ]
  },
  "prettier": {
    "semi": false,
    "arrowParens": "avoid",
    "printWidth": 100,
    "singleQuote": true,
    "tabWidth": 2
  },
  "release-it": {
    "hooks": {
      "after:bump": "npm run build"
    }
  }
}
